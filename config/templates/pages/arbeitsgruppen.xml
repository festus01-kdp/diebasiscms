<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>arbeitsgruppen</key>

    <view>pages/arbeitsgruppen</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
    <cacheLifetime>604800</cacheLifetime>

    <meta>
        <title>Arbeitsgruppen</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title>Title</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="de">Adresse</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>


        <block name="arbeitsgruppe" default-type="text">
            <meta>
                <title>AG dieBasis</title>
            </meta>
            <types>
                <type name="text">
                    <properties>
                        <property name="text" type="text_line" colspan="8">
                            <meta>
                                <title>Headline</title>
                            </meta>
                        </property>
                        <property name="id" type="text_line" colspan="4">
                            <meta>
                                <title>ID HTML</title>
                            </meta>
                        </property>
                        <property name="arbeitsgruppesubline" type="text_line" colspan="6">
                            <meta>
                                <title>Subline</title>
                            </meta>
                        </property>
                        <property name="arbeitsgruppeemail" type="text_line" colspan="6">
                            <meta>
                                <title>E-Mail</title>
                            </meta>
                        </property>
                        <block name="arbeitgruppeinhalt" default-type="text">
                            <meta>
                                <title>AG-Artikel</title>
                            </meta>
                            <types>
                                <type name="text">
                                    
                                    <properties>
                                        <property name="arbeitsgruppetext" type="text_editor">
                                            <meta>
                                                <title>Arbeitsgruppe Artikel</title>
                                            </meta>
                                        </property>
                                    </properties>

                                </type>

                            </types>

                        </block>

                    </properties>

                </type>

            </types>

        </block>

    </properties>
</template>
