<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>diebasisblog</key>

    <view>pages/diebasisblog</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
    <cacheLifetime>604800</cacheLifetime>

    <meta>
        <title>dieBasis BLOG</title>

    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title>Title</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>
            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title>Resourcelocator</title>
            </meta>
            <tag name="sulu.rlp"/>
        </property>

        <section name="blogeintrag">
            <meta>
                <title>BLOG-Eintrag</title>
            </meta>
            <properties>
                <block name="blog" default-type="blogtext">
                    <meta>
                        <title>BLOG-Eintrag</title>
                    </meta>
                    <types>
                        <type name="blogtext">
                            <properties>
                                <property name="blogtext" type="text_line" colspan="4" mandatory="true">
                                    <meta>
                                        <title>Headline</title>
                                    </meta>
                                </property>

                                <property name="single" type="single_select" colspan="4" mandatory="true">
                                    <meta>
                                        <title>Posted by</title>
                                    </meta>

                                    <params>
                                        <param name="default_value" value="Webmaster"/>

                                        <param name="values" type="collection">
                                            <param name="Webmaster">
                                                <meta>
                                                    <title lang="en">Webmaster</title>
                                                </meta>
                                            </param>
                                            <param name="Anselm Althöfer">
                                                <meta>
                                                    <title>Anselm Althöfer</title>
                                                </meta>
                                            </param>
                                            <param name="Klaus-Dieter Pernak">
                                                <meta>
                                                    <title>Klaus-Dieter</title>
                                                </meta>
                                            </param>
                                        </param>
                                    </params>
                                </property>

                                <property name="blogdatum" type="date" colspan="4" mandatory="true">
                                    <meta>
                                        <title>Datum</title>
                                    </meta>
                                </property>
                                <property name="blogartikel" type="text_editor" mandatory="true">
                                    <meta>
                                        <title>Artikel</title>
                                    </meta>
                                </property>
                            </properties>
                        </type>
                    </types>
                </block>
            </properties>
        </section>

    </properties>
</template>
