<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>konsensieren</key>

    <view>pages/konsensieren</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
    <cacheLifetime>604800</cacheLifetime>

    <meta>
        <title lang="en">Systemisches Konsensieren</title>
        <title lang="de">Systemisches Konsensieren</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Headline</title>
                <title lang="de">Headline</title>
            </meta>
            <params>
                <param name="konsensierenheadline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="de">Adresse</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>

        <property name="konsensierensubline" type="text_editor">
            <meta>
                <title lang="en">Subline</title>
                <title lang="de">Subline</title>
            </meta>
        </property>

        <property name="artikelleft" type="text_editor">
            <meta>
                <title lang="en">Artikel links</title>
                <title lang="de">Artikel links</title>
            </meta>
        </property>

        <property name="artikelright" type="text_editor">
            <meta>
                <title lang="en">Artikel rechts</title>
                <title lang="de">Artikel rechts</title>
            </meta>
        </property>

        <property name="artikelfoot" type="text_editor">
            <meta>
                <title lang="en">Artikel Footer</title>
                <title lang="de">Artikel Footer</title>
            </meta>
        </property>

    </properties>
</template>
