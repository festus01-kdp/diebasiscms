<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>matthiasheine</key>

    <view>pages/matthiasheine</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
<!--    <controller>App\Controller\CounterController::indexMyAction</controller>-->
    <cacheLifetime type="seconds">60</cacheLifetime>

    <meta>
        <title lang="en">Landtagswahl 2022 Niedersachsen</title>
        <title lang="de">Landtagswahl 2022 Niedersachsen</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="de">Titel</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="subtitle" type="text_line">
            <meta>
                <title lang="en">Subtitel</title>
                <title lang="de">Subtitle</title>
            </meta>
        </property>

        <property name="subsubtitle" type="text_line">
            <meta>
                <title lang="en">Sub-Subtitel</title>
                <title lang="de">Sub-Subtitle</title>
            </meta>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="de">Adresse</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>


        <property name="image" type="single_media_selection" colspan="3">
            <meta>
                <title lang="en">Bild</title>
            </meta>

            <params>
                <param name="types" value="image,video"/>
            </params>
        </property>

        <property name="alt_bildtext" type="text_line" colspan="3">
            <meta>
                <title lang="en">Bildtitel</title>
                <title lang="de">Bildtitel</title>
            </meta>
        </property>

        <property name="border" type="checkbox" colspan="2">
            <meta>
                <title lang="en">Border(Bild)</title>
            </meta>
            <params>
                <param name="type" value="toggler"/>
                <param name="label">

                </param>
            </params>
        </property>

        <property name="borderwidth" type="single_select" colspan="2">
            <meta>
                <title lang="en">Borderwidth</title>
            </meta>

            <params>
                <param name="default_value" value="1"/>

                <param name="values" type="collection">
                    <param name="1">
                        <meta>
                            <title lang="en">1px</title>
                        </meta>
                    </param>

                    <param name="2">
                        <meta>
                            <title lang="en">2px</title>
                        </meta>
                    </param>
                    <param name="3">
                        <meta>
                            <title lang="en">3px</title>
                        </meta>
                    </param>
                    <param name="4">
                        <meta>
                            <title lang="en">4px</title>
                        </meta>
                    </param>
                    <param name="5">
                        <meta>
                            <title lang="en">5px</title>
                        </meta>
                    </param>
                </param>
            </params>
        </property>

        <property name="color" type="single_select" colspan="2">
            <meta>
                <title lang="en">Color</title>
            </meta>
            <params>
                <param name="default_value" value="primary"/>

                <param name="values" type="collection">
                    <param name="primary">
                        <meta>
                            <title lang="en">Primary</title>
                        </meta>
                    </param>
                    <param name="secondary">
                        <meta>
                            <title lang="en">Secondary</title>
                        </meta>
                    </param>
                    <param name="success">
                        <meta>
                            <title lang="en">Success</title>
                        </meta>
                    </param>
                    <param name="danger">
                        <meta>
                            <title lang="en">Danger</title>
                        </meta>
                    </param>
                    <param name="warning">
                        <meta>
                            <title lang="en">Warning</title>
                        </meta>
                    </param>
                    <param name="info">
                        <meta>
                            <title lang="en">Info</title>
                        </meta>
                    </param>
                    <param name="light">
                        <meta>
                            <title lang="en">Light</title>
                        </meta>
                    </param>
                    <param name="dark">
                        <meta>
                            <title lang="en">Dark</title>
                        </meta>
                    </param>
                    <param name="white">
                        <meta>
                            <title lang="en">White</title>
                        </meta>
                    </param>
                </param>
            </params>
        </property>

        <property name="untertitel" type="text_editor">
            <meta>
                <title lang="en">Untertitel</title>
                <title lang="de">Untertitel</title>
            </meta>
        </property>

        <property name="haupttext" type="text_editor">
            <meta>
                <title lang="en">Haupttext</title>
                <title lang="de">Haupttext</title>
            </meta>
        </property>

    </properties>
</template>