<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>homepage</key>

    <view>pages/homepage</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
<!--    <controller>App\Controller\CounterController::indexAction</controller>-->
    <cacheLifetime>86400</cacheLifetime>

    <meta>
        <title lang="en">Homepage</title>
        <title lang="de">Startseite</title>
    </meta>

    <properties>

        <property name="organisation" type="contact_account_selection">
            <meta>
                <title lang="en">Organisation</title>
                <title lang="de">Organisation</title>
            </meta>
        </property>

        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="de">Titel</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="de">Adresse</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>

        <property name="homepageheadline" type="text_line">
            <meta>
                <title lang="en">Headline</title>
                <title lang="de">Headline</title>
            </meta>
        </property>

        <property name="homepagesubline" type="text_line">
            <meta>
                <title lang="en">Subline</title>
                <title lang="de">Subline</title>
            </meta>
        </property>
        <section name="slider">
            <meta>
                <title lang="en">Slider</title>
                <title lang="de">Slider</title>
            </meta>
            <properties>
                <property name="showslider" type="checkbox">
                    <params>
                        <param name="type" value="checkbox"/>
                        <param name="default_value" value="true"/>
                        <param name="label">
                            <meta>
                                <title lang="en">Slider on</title>
                                <title lang="de">Slider an</title>
                            </meta>
                        </param>
                    </params>
                </property>
                <block name="sliderbilder">
                    <types>
                        <type name="single_media_selection">
                            <properties>
                                <property name="sliderimage" type="single_media_selection" mandatory="true" colspan="5">
                                    <meta>
                                        <title lang="en">Slider Bild</title>
                                        <title lang="de">Slider Bild</title>
                                    </meta>
                                </property>
                                <property name="sliderimagealttext" type="text_line" colspan="7">
                                    <meta>
                                        <title lang="en">Alt Imagetext</title>
                                        <title lang="de">Alt Imagetext</title>
                                    </meta>
                                </property>
                            </properties>
                        </type>
                    </types>
                </block>
            </properties>
        </section>

        <section name="sidebar">
            <meta>
                <title lang="en">Sidebar</title>
                <title lang="de">Sidebar</title>
            </meta>
            <properties>
                <property name="sidebarsichtbar" type="checkbox">
                    <params>
                        <param name="type" value="checkbox"/>
                        <param name="default_value" value="true"/>
                        <param name="label">
                            <meta>
                                <title lang="en">show Sidebar</title>
                                <title lang="de">Sidebar anzeigen</title>
                            </meta>
                        </param>
                    </params>
                </property>
                <block name="sidebarinhalt" default-type="single_media_selection">
                    <types>
                        <type name="single_media_selection">
                            <properties>
                                <property name="sidebarimage" type="single_media_selection" colspan="6">
                                    <meta>
                                        <title lang="en">Image</title>
                                        <title lang="de">Image</title>
                                    </meta>
                                </property>
                                <property name="sidebarlink" type="link" colspan="6">
                                    <meta>
                                        <title lang="en">URL</title>
                                        <title lang="de">URL</title>
                                    </meta>
                                </property>
                                <property name="sidebartext" type="text_editor">
                                    <meta>
                                        <title lang="en">Text</title>
                                        <title lang="de">Text</title>
                                    </meta>
                                </property>
                            </properties>
                        </type>
                    </types>
                </block>

            </properties>
        </section>
        <section name="homepageaktuell">
            <meta>
                <title lang="en">Aktuelle Kampagne</title>
                <title lang="de">Aktuelle Kampagne</title>
            </meta>
            <properties>
                <property name="homepageaktuellcolor" type="color" colspan="3">
                    <meta>
                        <title lang="en">Kampagne Farbe</title>
                        <title lang="de">Kampagne Farbe</title>
                    </meta>
                </property>
                <property name="homepageaktuellheadline" type="text_line" colspan="9">
                    <meta>
                        <title lang="en">Headline Aktuelle Kampagne</title>
                        <title lang="de">Headline Aktuelle Kampagne</title>
                    </meta>
                </property>
                <property name="homepageaktuellsubline" type="text_editor">
                    <meta>
                        <title lang="en">Subline Aktuelle Kampagne</title>
                        <title lang="de">Subline Aktuelle Kampagne</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="images">
            <meta>
                <title lang="en">Bilder</title>
                <title lang="de">Bilder</title>
            </meta>
            <properties>
                <property name="homepagenavimage" type="single_media_selection" colspan="6">
                    <meta>
                        <title lang="en">Image Navbar</title>
                        <title lang="de">Image Navbar</title>
                    </meta>
                </property>
                <property name="homepageheaderimage" type="single_media_selection" colspan="6">
                    <meta>
                        <title lang="en">Image Header</title>
                        <title lang="de">Image Header</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="sectionhomepagebilderteam">
            <meta>
                <title lang="en">Bilder Team</title>
                <title lang="de">Bilder Team</title>
            </meta>
            <properties>
                <block name="blockhomepagebilderteam" default-type="single_media_selection">
                    <meta>
                        <title lang="en">Bilder</title>
                        <title lang="de">Bilder</title>
                    </meta>
                    <types>
                        <type name="single_media_selection">
                            <properties>
                                <property name="teambild" type="single_media_selection" colspan="5" mandatory="true">
                                    <meta>
                                        <title lang="en">Bild</title>
                                        <title lang="de">Bild</title>
                                    </meta>
                                </property>

                                <property name="teamhomepage" type="text_line" colspan="4">
                                    <meta>
                                        <title lang="en">Homepage</title>
                                        <title lang="de">Homepage</title>
                                    </meta>
                                </property>

                                <property name="geschlecht" type="single_select" colspan="3" mandatory="true">
                                    <meta>
                                        <title lang="en">Geschlecht</title>
                                        <title lang="de">Geschlecht</title>
                                    </meta>
                                    <params>
                                        <param name="values" type="collection">
                                            <param name="male">
                                                <meta>
                                                    <title lang="en">Männlich</title>
                                                    <title lang="de">Männlich</title>
                                                </meta>
                                            </param>
                                            <param name="female">
                                                <meta>
                                                    <title lang="en">Weiblich</title>
                                                    <title lang="de">Weiblich</title>
                                                </meta>
                                            </param>
                                        </param>
                                    </params>
                                </property>

                                <property name="teamname" type="text_line" colspan="4" mandatory="true">
                                    <meta>
                                        <title lang="en">Name</title>
                                        <title lang="de">Name</title>
                                    </meta>
                                </property>
                                <property name="teamfunktion" type="text_line" colspan="4">
                                    <meta>
                                        <title lang="en">Funktion</title>
                                        <title lang="de">Funktion</title>
                                    </meta>
                                </property>
                                <property name="teamemail" type="email" colspan="4">
                                    <meta>
                                        <title lang="en">E-Mail</title>
                                        <title lang="de">E-Mail</title>
                                    </meta>
                                </property>
                            </properties>
                        </type>
                    </types>
                </block>
            </properties>
        </section>

        <section name="homepagegruendungartikel">
            <meta>
                <title lang="en">Artikel</title>
                <title lang="de">Artikel</title>
            </meta>
            <properties>
                <block name="blockartikel">
                    <meta>
                        <title lang="en">Hauptartikel</title>
                        <title lang="de">Hauptartikel</title>
                    </meta>
                    <types>
                        <type name="homepageartikel">
                            <properties>

                                <property name="homepageartikelimage" type="single_media_selection" colspan="5">
                                    <meta>
                                        <title lang="en">Bild vor Headline</title>
                                        <title lang="de">Bild vor Headline</title>
                                    </meta>
                                </property>
                                <property name="homepageartikelimagesize" type="text_line" colspan="1">
                                    <meta>
                                        <title lang="en">Size</title>
                                        <title lang="de">Größe</title>
                                    </meta>
                                </property>
                                <property name="homepageartikelimagealt" type="text_line" colspan="4">
                                    <meta>
                                        <title lang="en">Alt Text</title>
                                        <title lang="de">Alt Text</title>
                                    </meta>
                                </property>
                                <property name="homepageartikelimagebgcolor" type="color" colspan="2">
                                    <meta>
                                        <title lang="en">BG-Color</title>
                                        <title lang="de">HG-Farbe</title>
                                    </meta>
                                </property>

                                <property name="homepageartikelheadline" type="text_line">
                                    <meta>
                                        <title lang="en">Headline</title>
                                        <title lang="de">Headline</title>
                                    </meta>
                                </property>

                                <property name="homepageartikelsubline" type="text_line">
                                    <meta>
                                        <title lang="en">Subline</title>
                                        <title lang="de">Subline</title>
                                    </meta>
                                </property>

                                <property name="homepageartikelsubtext" type="text_editor">
                                    <meta>
                                        <title lang="en">Subtext</title>
                                        <title lang="de">Subtext</title>
                                    </meta>
                                </property>

                            </properties>
                        </type>
                    </types>

                </block>
            </properties>


        </section>

        <section name="homepageueberuns">
            <meta>
                <title lang="en">Über uns</title>
                <title lang="de">Über uns</title>
            </meta>
            <properties>
                <property name="hoepageueberunsheadline" type="text_line">
                    <meta>
                        <title lang="en">Headline</title>
                        <title lang="de">Headline</title>
                    </meta>
                </property>
                <property name="homepageueberunssubline" type="text_editor">
                    <meta>
                        <title lang="en">Subline</title>
                        <title lang="de">Subline</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="homepagesaeulenblock">
            <meta>
                <title lang="en">Die Säulen</title>
                <title lang="de">Die Säulen</title>
            </meta>
            <properties>
                <block name="blocksaeulen">
                    <types>
                        <type name="blocksaeulen">
                            <properties>
                                <property name="homepagesaeulenblockheadline" type="text_line">
                                    <meta>
                                        <title lang="en">Header Säule</title>
                                        <title lang="de">Header Säule</title>
                                        <info_text lang="en">
                                            Überschrift der Säule
                                        </info_text>
                                        <info_text lang="de">
                                            Überschrift der Säule
                                        </info_text>
                                    </meta>
                                </property>
                                <property name="homepagesaeuleblocksubtext" type="text_area">
                                    <meta>
                                        <title lang="en">Text Säule</title>
                                        <title lang="de">Text Säule</title>
                                    </meta>
                                </property>
                                <property name="homepagesaeuleblockfarbe" type="color">
                                    <meta>
                                        <title lang="en">Color Säule</title>
                                        <title lang="de">Farbe Säule</title>
                                        <info_text lang="en">
                                            Farbe der Säule
                                        </info_text>
                                        <info_text lang="de">
                                            Farbe der Säule
                                        </info_text>
                                    </meta>
                                </property>
                            </properties>
                        </type>
                    </types>
                </block>
            </properties>
        </section>
        <section name="wirstehenfuer">
            <meta>
                <title lang="en">Wir stehen für</title>
                <title lang="de">Wir stehen für</title>
            </meta>
            <properties>
                <property name="wirstehenfuerheadline" type="text_line">
                    <meta>
                        <title lang="en">Headline</title>
                        <title lang="de">Headline</title>
                    </meta>
                </property>
                <property name="wirstehenfuersubline" type="text_line">
                    <meta>
                        <title lang="en">Subline</title>
                        <title lang="de">Subline</title>
                    </meta>
                </property>
                <property name="wirstehenfuerimage" type="single_media_selection">
                    <meta>
                        <title lang="en">Image</title>
                        <title lang="de">Image</title>
                    </meta>
                </property>
                <property name="wirstehenfuerartikel" type="text_area">
                    <meta>
                        <title lang="en">Text</title>
                        <title lang="de">Text</title>
                    </meta>
                </property>
            </properties>
        </section>
        <section name="diebasisprogram">
            <meta>
                <title lang="en">dieBasis Programm</title>
            </meta>
            <properties>
                <property name="diebasisprogramheadline" type="text_line">
                    <meta>
                        <title lang="en">Program Headline</title>
                        <title lang="de">Program Headline</title>
                    </meta>
                </property>
                <block name="programmpunkte">
                    <types>
                        <type name="programmpunkte">
                            <properties>
                                <property name="headline" type="text_line">
                                    <meta>
                                        <title lang="en">Program Haupttext</title>
                                        <title lang="de">Program Haupttext</title>
                                    </meta>
                                </property>
                                <block name="programmunterpunkte">
                                    <types>
                                        <type name="programmunterpunkte">
                                            <properties>
                                                <property name="subline" type="text_area">
                                                    <meta>
                                                        <title lang="en">Programm Unterpunkt</title>
                                                    </meta>
                                                </property>
                                            </properties>
                                        </type>
                                    </types>
                                </block>
                            </properties>
                        </type>
                    </types>
                </block>
            </properties>
        </section>
    </properties>
</template>
