<?xml version="1.0" ?>
<template xmlns="http://schemas.sulu.io/template/template"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">

    <key>homepage</key>

    <view>pages/homepage</view>
    <controller>Sulu\Bundle\WebsiteBundle\Controller\DefaultController::indexAction</controller>
    <cacheLifetime>86400</cacheLifetime>

    <meta>
        <title lang="en">Homepage</title>
        <title lang="de">Startseite</title>
    </meta>

    <properties>
        <property name="title" type="text_line" mandatory="true">
            <meta>
                <title lang="en">Title</title>
                <title lang="de">Titel</title>
            </meta>
            <params>
                <param name="headline" value="true"/>
            </params>

            <tag name="sulu.rlp.part"/>
        </property>

        <property name="url" type="resource_locator" mandatory="true">
            <meta>
                <title lang="en">Resourcelocator</title>
                <title lang="de">Adresse</title>
            </meta>

            <tag name="sulu.rlp"/>
        </property>

        <property name="homepageheadline" type="text_line">
            <meta>
                <title>Headline</title>
            </meta>
        </property>

        <property name="homepagesubline" type="text_line">
            <meta>
                <title>Subline</title>
            </meta>
        </property>

         <section name="images">
            <meta>
                <title>Bilder</title>
            </meta>
            <properties>
                <property name="homepagenavimage" type="single_media_selection" colspan="6">
                    <meta>
                        <title>Image Navbar</title>
                    </meta>    
                </property>
                <property name="homepageheaderimage" type="single_media_selection" colspan="6"> 
                    <meta>
                        <title>Image Header</title>
                    </meta>
                </property>
            </properties>
        </section>  

        <section name="sectionhomepagebilderteam">
            <meta>
                <title>Bilder Team</title>
            </meta>
            <properties>
                <block name="blockhomepagebilderteam" default-type="single_media_selection">
                    <meta>
                        <title>Bilder</title>
                    </meta>
                    <types>
                        <type name="single_media_selection">
                            <properties>
                                <property name="teambild" type="single_media_selection" colspan="5" mandatory="true">
                                    <meta>
                                        <title>Bild</title>
                                    </meta>
                                </property>

                                <property name="teamhomepage" type="text_line" colspan="4">
                                    <meta>
                                        <title>Homepage</title>
                                    </meta>
                                </property>

                                <property name="geschlecht" type="single_select" colspan="3" mandatory="true">
                                    <meta>
                                        <title>Geschlecht</title>
                                    </meta>
                                    <params>
                                        <param name="values" type="collection">
                                            <param name="male">
                                                <meta>
                                                    <title>Männlich</title>
                                                </meta>
                                            </param>
                                            <param name="female">
                                                <meta>
                                                    <title>Weiblich</title>
                                                </meta>
                                            </param>
                                        </param>
                                    </params>
                                </property>

                                <property name="teamname" type="text_line" colspan="4" mandatory="true">
                                    <meta>
                                        <title>Name</title>
                                    </meta>
                                </property>
                                <property name="teamfunktion" type="text_line" colspan="4">
                                    <meta>
                                        <title>Funktion</title>
                                    </meta>
                                </property>
                                <property name="teamemail" type="email" colspan="4">
                                    <meta>
                                        <title>E-Mail</title>
                                    </meta>
                                </property>
                            </properties>
                        </type>
                    </types>
                </block>
            </properties>
        </section>

        <section name="homepagegruendungartikel">
            <meta>
                <title>Subheader</title>
            </meta>
            <properties>
                <property name="homepagegruendungheadline" type="text_line">
                    <meta>
                        <title>Artikel 1</title>
                    </meta>
                </property>

                <property name="homepagegruendungsubline" type="text_editor">
                    <meta>
                        <title>Subline 1</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="homepageueberuns">
            <meta>
                <title>Über uns</title>
            </meta>
            <properties>
                <property name="hoepageueberunsheadline" type="text_line">
                    <meta>
                        <title>Headline</title>
                    </meta>
                </property>
                <property name="homepageueberunssubline" type="text_editor">
                    <meta>
                        <title>Subline</title>
                    </meta>
                </property>
            </properties>
        </section>

        <section name="homepagesaeulen">
            <meta>
                <title>Säulen</title>
            </meta>
            <properties>
                <property name="homepagesaeule1header" type="text_line" colspan="4">
                    <meta>
                        <title>Header Säule 1</title>
                    </meta>
                </property>
                <property name="homepagesaeule1subline" type="text_area" colspan="8">
                    <meta>
                        <title>Subline Säule 1</title>
                    </meta>
                </property>
                <property name="homepagesaeule2header" type="text_line" colspan="4">
                    <meta>
                        <title>Header Säule 2</title>
                    </meta>
                </property>
                <property name="homepagesaeule2subline" type="text_area" colspan="8">
                    <meta>
                        <title>Subline Säule 2</title>
                    </meta>
                </property>
                <property name="homepagesaeule3header" type="text_line" colspan="4">
                    <meta>
                        <title>Header Säule 3</title>
                    </meta>
                </property>
                <property name="homepagesaeule3subline" type="text_area" colspan="8">
                    <meta>
                        <title>Subline Säule 3</title>
                    </meta>
                </property>
                <property name="homepagesaeule4header" type="text_line" colspan="4">
                    <meta>
                        <title>Header Säule 4</title>
                    </meta>
                </property>
                <property name="homepagesaeule4subline" type="text_area" colspan="8">
                    <meta>
                        <title>Subline Säule 4</title>
                    </meta>
                </property>
            </properties>
        </section>
    </properties>
</template>
