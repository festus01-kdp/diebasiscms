{% block content %}
{#    {{ dump(content) }}#}
    <section>
        <div class="container mb-4">
            <div class="card ps-2 pe-2">
                <h1 class="text-center">Statistik Besucherz√§hler</h1>
                <h4>Anzahl Besucher: {{ content.counter.sumAccess }}</h4>
