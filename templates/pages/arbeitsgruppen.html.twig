{% extends "basediebasiscms.html.twig" %}
{% block content %}
	<body>
		<div class="container pt-2">
			<h1 class="text-center">Die Arbeitsgruppen der dieBasis</h1>

			{% for item in content.arbeitsgruppe %}
				<section id={{ item.id }} class="mb-3 section-arbeitsgruppe">
					<div class="row">
						<div class="col">
							<h4>{{ item.text }}</h4>
							<h5>{{ item.arbeitsgruppesubline }}
								{{ item.arbeitsgruppevorname }}
								{{ item.arbeitsgruppenachname }}</span>

							{% if item.arbeitsgruppeemail %}
								{% set isemail = true %}

							{% else %}
								{% set isemail = false %}

							{% endif %}

							{% if item.arbeitsgruppeanrede == "frau" and isemail %}
								{% set anrede = "Sehr geehrte Frau %s" | format(item.arbeitsgruppenachname)  %}
							{% else %}
								{% set anrede = "Sehr geehrter Herr %s" | format(item.arbeitsgruppenachname) %}
							{% endif %}
							{% if isemail %}
								<a href="mailto:{{ item.arbeitsgruppeemail }}?subject=Anfrage&amp;body={{ anrede }}">&nbsp;<i class="fa fa-envelope"></i>
								</a>
							{% endif %}
						</h5>
						{{ include("includes/arbeitsgruppenartikel.html.twig", {item}) }}
					</div>
				</div>
			</section>
			<div class="text-center">
				<hr class="hr-line">
			</div>
		{% endfor %}
		<div>
			<a class="back-to-top hvr-back-pulse" href="#">
				<i class="fa fa-angle-up" style="color: rgb(37,178,231);"></i>
			</a>
		</div>
	</body>
{% endblock %}
